---
const certifications = [
//   {
//     name: "Google Data Analytics Professional Certificate",
//     issuer: "Google",
//     date: "2024",
//     credentialUrl: "https://www.credly.com/badges/your-badge-id",
//     logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/google/google-original.svg",
//     description: "Comprehensive data analytics program covering data cleaning, analysis, and visualization"
//   },
//   {
//     name: "AWS Cloud Practitioner",
//     issuer: "Amazon Web Services",
//     date: "2024",
//     credentialUrl: "https://www.credly.com/badges/your-badge-id",
//     logo: "https://cdn.jsdelivr.net/gh/devicons/devicon/icons/amazonwebservices/amazonwebservices-original.svg",
//     description: "Foundational cloud computing concepts and AWS services"
//   },
  {
    name: "Microsoft Certified: Power BI Data Analyst Associate",
    issuer: "Microsoft",
    date: "2024",
    credentialUrl: "https://learn.microsoft.com/api/credentials/share/en-us/AlyaniNS/5DD6E3F66C0723AB?sharingId=1CEA4CDE39666709",
    logo: "https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/microsoft.svg",
    description: "Skilled in preparing, modeling, and visualizing data, with expertise in analysis, management, and securing Power BI solutions."
  }
];
---

<section id="certifications" class="mt-14">
  <h2 class="text-sm font-bold text-center">Certifications</h2>
  
  <div class="mt-6 grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {certifications.map(cert => (
      <div class="relative group">
        <article class="h-full p-6 bg-white border border-navy-200 rounded-2xl shadow-soft transition-all duration-300 hover:-translate-y-1 hover:shadow-lg dark:bg-navy-800 dark:border-navy-700 dark:shadow-soft-dark">
          <!-- Certification Header -->
          <div class="flex items-start gap-4 mb-4">
            <div class="flex-shrink-0">
              <img 
                src={cert.logo} 
                alt={cert.issuer}
                class="w-12 h-12 rounded-lg object-contain"
              />
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="text-xs font-bold text-navy-900 mb-1 line-clamp-2 dark:text-navy-100">
                {cert.name}
              </h3>
              <p class="text-xs text-navy-600 dark:text-navy-300">
                {cert.issuer}
              </p>
              <p class="text-xs text-navy-500 dark:text-navy-400">
                {cert.date}
              </p>
            </div>
          </div>

          <!-- Description -->
          <p class="text-xs text-navy-600 dark:text-navy-300 mb-4 line-clamp-3">
            {cert.description}
          </p>

          <!-- Credential Link -->
          {cert.credentialUrl && (
            <div class="mt-auto">
              <a 
                href={cert.credentialUrl} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-xs text-brand-600 hover:text-brand-700 dark:text-brand-400 dark:hover:text-brand-300 font-medium transition-colors"
              >
                View Credential
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17l9.2-9.2M17 17V7H7" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </a>
            </div>
          )}
        </article>
      </div>
    ))}
  </div>
</section>

<style is:global>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
