<section id="contact" class="mt-14">
  <h2 class="text-sm font-bold text-center">Contact Me</h2>
  <div class="mt-6 flex gap-8 justify-center">
    {socials.map((s) => (
      <a
        href={s.href}
        target={s.href.startsWith('http') ? '_blank' : undefined}
        rel={s.href.startsWith('http') ? 'noopener noreferrer' : undefined}
        class="flex flex-col items-center text-navy-500 hover:text-brand-600 dark:text-navy-300 dark:hover:text-brand-400 transition-colors"
        aria-label={s.name}
      >
        <div class="w-6 h-6" set:html={icons[s.name]}></div>
        <span class="text-xs mt-2">{s.name}</span>
      </a>
    ))}
  </div>
</section>
